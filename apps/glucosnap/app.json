{
  "expo": {
    "name": "GlucoSnap",
    "slug": "glucosnap",
    "scheme": "glucosnap",
    "owner": "barthinator", 
    "version": "0.1.0",
    "sdkVersion": "53.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#1F1246",
      "resizeMode": "contain"
    },
    "androidStatusBar": {
      "backgroundColor": "#1F1246",
      "barStyle": "light-content"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.eldor.glucosnap"
    },
    "android": {
      "package": "com.eldor.glucosnap",
      "enableEdgeToEdge": true,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "CAMERA",
        "INTERNET",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_NETWORK_STATE",
        "ACCESS_WIFI_STATE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "category": ["BROWSABLE", "DEFAULT"],
          "data": [
            { "scheme": "glucosnap" }
          ]
        }
      ]
    },
    "extra": {
      "apiBaseUrl": "https://08o8wsyz88.execute-api.us-east-1.amazonaws.com/prod/"
    },
    "plugins": [
      [
        "react-native-google-mobile-ads",
        {
          "react-native-google-mobile-ads": {
            "android_app_id": "ca-app-pub-1514892537757211~8757180508",
            "ios_app_id": "ca-app-pub-1514892537757211~8757180508"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}

{
  "name": "glucosnap-infrastructure",
  "version": "0.1.0",
  "description": "Infrastructure as Code for GlucoSnap using AWS CDK",
  "main": "bin/glucosnap.js",
  "scripts": {
    "build": "tsc",
    "build:lambdas": "node scripts/build-lambdas.js build",
    "clean:lambdas": "node scripts/build-lambdas.js clean", 
    "rebuild:lambdas": "node scripts/build-lambdas.js rebuild",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "npm run build:lambdas && cdk deploy",
    "deploy:force": "npm run build:lambdas && cdk deploy --force",
    "destroy": "cdk destroy",
    "diff": "cdk diff",
    "synth": "cdk synth"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.11",
    "@types/uuid": "^9.0.0",
    "aws-cdk": "^2.1027.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "~5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.0.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-ssm": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.0.0",
    "@aws-sdk/util-dynamodb": "^3.0.0",
    "aws-cdk-lib": "^2.213.0",
    "aws-jwt-verify": "^4.0.0",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.0.0",
    "uuid": "^9.0.0"
  }
}
